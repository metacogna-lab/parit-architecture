{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@parti/shared": ["./packages/shared/src/index.ts"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "composite": true
  },
  "exclude": ["node_modules", "dist", "workers/**/dist"]
}